{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",                      
    "module": "commonjs",                     
    "lib": ["es6", "dom", "dom.iterable"],                      
    "allowJs": true,                         
    "jsx": "react",                   
    "outDir": "./dist/",                       
    "noEmit": false,                          
    "isolatedModules": false,                 
    "strict": true,                          
    "noImplicitAny": true,                 
    "moduleResolution": "node",              
    "baseUrl": "./",                          
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": false
  },
  "exclude": [
    "node_modules"
  ],
}