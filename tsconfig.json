{
  "extends": "expo/tsconfig.base",
  "compileOnSave": false,

  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
