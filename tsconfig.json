{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2017", "esnext"],
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true ,
    "strict": true,
    "baseUrl": "./",
    "noEmit": true,
  },
  "exclude": ["node_modules"]
}
